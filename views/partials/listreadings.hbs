
<table class="ui table">
    <thead>
    <tr>
        <th>Code</th>
        <th>Temperature</th>
        <th>Wind Speed</th>
        <th>Wind Direction</th>
        <th>Pressure</th>
    </tr>
    </thead>
    <tbody>
    {{#each station.readings}}
        <tr>
            <td>
                {{code}}
            </td>
            <td>
                {{temperature}}
            </td>
            <td>
                {{windSpeed}}
            </td>
            <td>
                {{windDirection}}
            </td>
            <td>
                {{pressure}}
            </td>
    {{/each}}
    </tr>
    </tbody>
</table>
