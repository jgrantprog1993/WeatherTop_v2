<form class="ui stacked segment form" action="/dashboard/addstation" method="POST">
    <div class="three fields">

        <div class="field">
            <label>Name</label>
            <input placeholder="Station Name" type="text" name="name">
        </div>

        <div class="field">
            <label>Latitude</label>
            <input placeholder="00.00" type="number" step=any min="-90" max="90" name="lat">
        </div>

        <div class="field">
            <label>Longitude</label>
            <input placeholder="00.00" type="number" step=any min="-180" max="180" name="lng">
        </div>
    </div>
    <button class="ui blue submit button">Add Station</button>
</form>