<style>#mapid {
    height: 360px;
}</style>
<div id="mapid"></div>
<script>

    var mymap = L.map('mapid').setView([52.149, -6.994], 11);


    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1IjoiamdyYW50MTk5MyIsImEiOiJja3QzYjVocW0wc2lhMzZwZ2tibzV3YjFhIn0.qcSag9bl8IwP7A9OJKOzUA', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
        maxZoom: 18,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: 'pk.eyJ1IjoiamdyYW50MTk5MyIsImEiOiJja3QzYjVocW0wc2lhMzZwZ2tibzV3YjFhIn0.qcSag9bl8IwP7A9OJKOzUA'
    }).addTo(mymap);

    let markerIcons = [];
        {{#each stations}}
        var markers = L.marker([{{lat}}, {{lng}}]).addTo(mymap);
        // marker.bindPopup("{{this.name}}").openPopup();
        markerIcons.push(markers);
        {{/each}}
    var stationsView = new L.featureGroup(markerIcons);
    mymap.fitBounds(stationsView.getBounds());

</script>

